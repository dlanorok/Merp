@inject IStringLocalizer<Resources.Components.ProvidenceFundDisplay> localizer

<fieldset>
    <legend>@localizer[nameof(Resources.Components.ProvidenceFundDisplay.ProvidenceFundSectionTitle)]</legend>

    <MudGrid>
        <MudItem xs="7" md="7">
            <MudText>@localizer[nameof(Resources.Components.ProvidenceFundDisplay.ProvidenceFundDescriptionLabel)]</MudText>
        </MudItem>
        <MudItem xs="2" md="2">
            <MudText>@localizer[nameof(Resources.Components.ProvidenceFundDisplay.ProvidenceFundRateLabel)]</MudText>
        </MudItem>
        <MudItem xs="3" md="3">
            <MudText>@localizer[nameof(Resources.Components.ProvidenceFundDisplay.ProvidenceFundAmount)]</MudText>
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="7" md="7">
            <MudText>@ProvidenceFund.Description</MudText>
        </MudItem>
        <MudItem xs="2" md="2">
            <MudText>@ProvidenceFund.Rate %</MudText>
        </MudItem>
        <MudItem xs="3" md="3">
            <MudText>@Currency @ProvidenceFund.Amount.ToString("N2")</MudText>
        </MudItem>
    </MudGrid>
</fieldset>
