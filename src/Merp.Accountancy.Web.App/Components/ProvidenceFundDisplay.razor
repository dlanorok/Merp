<fieldset>
    <legend>Providence fund</legend>

    <MudGrid>
        <MudItem xs="7" md="7">
            <MudText>Description</MudText>
        </MudItem>
        <MudItem xs="2" md="2">
            <MudText>Rate</MudText>
        </MudItem>
        <MudItem xs="3" md="3">
            <MudText>Amount</MudText>
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="7" md="7">
            <MudText>@ProvidenceFund.Description</MudText>
        </MudItem>
        <MudItem xs="2" md="2">
            <MudText>@ProvidenceFund.Rate %</MudText>
        </MudItem>
        <MudItem xs="3" md="3">
            <MudText>@Currency @ProvidenceFund.Amount.ToString("N2")</MudText>
        </MudItem>
    </MudGrid>
</fieldset>
