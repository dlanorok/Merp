@page "/accountancy"

@inject UrlBuilder UrlBuilder
@inject IStringLocalizer<Resources.Pages.Index> localizer

<PageTitle>@localizer[nameof(Resources.Pages.Index.PageTitle)]</PageTitle>

<MudText Typo="Typo.h5">@localizer[nameof(Resources.Pages.Index.PageHeaderText)]</MudText>
<MudDivider />

<MudGrid>
    <MudItem md="4" xs="12">
        <MudPaper Class="mt-4 px-2">
            <MudNavMenu Class="mud-width-full">
                <MudText Typo="Typo.h6">@localizer[nameof(Resources.Pages.Index.JobOrdersMenuLabel)]</MudText>

                <MudNavLink Href="@UrlBuilder.BuildSearchJobOrdersUrl()">@localizer[nameof(Resources.Pages.Index.SearchJobOrdersMenuItemLabel)]</MudNavLink>
                <MudNavLink Href="@UrlBuilder.BuildCreateJobOrderUrl()">@localizer[nameof(Resources.Pages.Index.CreateJobOrderMenuItemLabel)]</MudNavLink>
            </MudNavMenu>
        </MudPaper>
        <MudPaper Class="mt-4 px-2">
            <MudNavMenu Class="mud-width-full">
                <MudText Typo="Typo.h6">@localizer[nameof(Resources.Pages.Index.InvoicesMenuLabel)]</MudText>

                <MudNavLink Href="@UrlBuilder.BuildSearchInvoicesUrl()">@localizer[nameof(Resources.Pages.Index.SearchInvoicesMenuItemLabel)]</MudNavLink>
                <MudNavLink Href="@UrlBuilder.BuildIssueOutgoingInvoiceUrl()">@localizer[nameof(Resources.Pages.Index.IssueInvoiceMenuItemLabel)]</MudNavLink>
                <MudNavLink Href="@UrlBuilder.BuildIssueOutgoingCreditNoteUrl()">@localizer[nameof(Resources.Pages.Index.IssueCreditNoteMenuItemLabel)]</MudNavLink>
                <MudNavLink Href="@UrlBuilder.BuildRegisterIncomingInvoiceUrl()">@localizer[nameof(Resources.Pages.Index.RegisterIncomingInvoiceMenuItemLabel)]</MudNavLink>
                <MudNavLink Href="@UrlBuilder.BuildRegisterIncomingCreditNoteUrl()">@localizer[nameof(Resources.Pages.Index.RegisterIncomingCreditNoteMenuItemLabel)]</MudNavLink>
                <MudNavLink Href="@UrlBuilder.BuildRegisterOutgoingInvoiceUrl()">@localizer[nameof(Resources.Pages.Index.RegisterOutgoingInvoiceMenuItemLabel)]</MudNavLink>
                <MudNavLink Href="@UrlBuilder.BuildRegisterOutgoingCreditNoteUrl()">@localizer[nameof(Resources.Pages.Index.RegisterOutgoingCreditNoteMenuItemLabel)]</MudNavLink>
                <MudNavLink Href="#">@localizer[nameof(Resources.Pages.Index.LinkOutgoingInvoiceToJobOrderMenuItemLabel)]</MudNavLink>
                <MudNavLink Href="#">@localizer[nameof(Resources.Pages.Index.LinkIncomingInvoiceToJobOrderMenuItemLabel)]</MudNavLink>
            </MudNavMenu>
        </MudPaper>
    </MudItem>
    <MudItem md="8" xs="12">
        @* Accountancy Stats goes here *@
    </MudItem>
</MudGrid>
