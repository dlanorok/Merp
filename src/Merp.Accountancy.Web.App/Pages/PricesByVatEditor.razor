<fieldset>
    <legend>Prices by VAT</legend>

    <MudGrid>
        <MudItem xs="5" md="5">
            <MudText>Taxable amount</MudText>
        </MudItem>
        <MudItem xs="3" md="3">
            <MudText>VAT</MudText>
        </MudItem>
        <MudItem xs="4" md="4">
            <MudText>Tot. price</MudText>
        </MudItem>
    </MudGrid>
    <MudDivider />

    @foreach (var item in PricesByVat)
    {
        <MudGrid>
            <MudItem xs="3" md="3">
                <MudNumericField Label="Taxable amount"
                                 @bind-Value="item.TaxableAmount"
                                 For="@(() => item.TaxableAmount)"
                                 Variant="Variant.Outlined"
                                 Step=".01M" 
                                 Min="0"/>
            </MudItem>
            <MudItem xs="2" md="2">
                <MudText>@item.VatRate %</MudText>
            </MudItem>
            <MudItem xs="3" md="3">
                <MudNumericField Label="VAT"
                                 @bind-Value="item.VatAmount"
                                 For="@(() => item.VatAmount)"
                                 Variant="Variant.Outlined"
                                 Step=".01M" 
                                 Min="0"/>
            </MudItem>
            <MudItem xs="4" md="4">
                <MudNumericField Label="VAT"
                                 @bind-Value="item.TotalPrice"
                                 For="@(() => item.TotalPrice)"
                                 Variant="Variant.Outlined"
                                 Step=".01M" 
                                 Min="0"/>
            </MudItem>
        </MudGrid>
    }
</fieldset>
