@page "/accountancy/creditnote/registeroutgoing"

@inject IStringLocalizer<Resources.Pages.RegisterOutgoingCreditNote> localizer

<PageTitle>@localizer[nameof(Resources.Pages.RegisterOutgoingCreditNote.PageTitle)]</PageTitle>
<HeadContent>
    <link rel="stylesheet" href="/_content/Merp.Accountancy.Web.App/lib/font-awesome/css/all.min.css" />
</HeadContent>

<MudToolBar>
    <MudText Typo="Typo.h5">@localizer[nameof(Resources.Pages.RegisterOutgoingCreditNote.PageHeaderText)]</MudText>
    <MudSpacer />
    <MudButton type="button" Variant="Variant.Outlined" EndIcon="fas fa-caret-right" Color="Color.Primary">
        @localizer[nameof(Resources.Pages.RegisterOutgoingCreditNote.BackButtonText)]
    </MudButton>
</MudToolBar>
<MudDivider />

<RegisterOutgoingInvoiceForm Model="model"
                             OnRegisterOutgoingInvoice="RegisterOutgoingCreditNoteAsync"
                             OnCancel="Cancel" />
