@page "/accountancy/invoice/register"

@inject IStringLocalizer<Resources.Pages.RegisterIncomingInvoice> localizer

<PageTitle>@localizer[nameof(Resources.Pages.RegisterIncomingInvoice.PageTitle)]</PageTitle>
<HeadContent>
    <link rel="stylesheet" href="/_content/Merp.Accountancy.Web.App/lib/font-awesome/css/all.min.css" />
</HeadContent>

<MudToolBar>
    <MudText Typo="Typo.h5">@localizer[nameof(Resources.Pages.RegisterIncomingInvoice.PageHeaderText)]</MudText>
    <MudSpacer />
    <MudButton type="button" Variant="Variant.Outlined" EndIcon="fas fa-caret-right" Color="Color.Primary">
        @localizer[nameof(Resources.Pages.RegisterIncomingInvoice.BackButtonText)]
    </MudButton>
</MudToolBar>
<MudDivider />

<RegisterIncomingInvoiceForm Model="model"
                             OnRegisterIncomingInvoice="RegisterIncomingInvoiceAsync"
                             OnCancel="Cancel"/>
